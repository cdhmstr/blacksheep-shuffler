<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerManagementActivity">

    <!-- Guidelines to create a responsive centered content area -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <!-- Main Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/session_setup_title" />

    <!-- This container will hold all setup controls -->
    <LinearLayout
        android:id="@+id/setupContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintBottom_toTopOf="@id/buttonStartSession"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <!-- Add Player Section -->
        <LinearLayout
            android:id="@+id/addPlayerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPlayerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/new_player_name_hint"
                android:importantForAutofill="yes"
                android:autofillHints="name"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:textColorHint="?android:attr/textColorSecondary" />

            <Button
                android:id="@+id/buttonAddPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/add_button" />
        </LinearLayout>

        <!-- Court Selection Section -->
        <LinearLayout
            android:id="@+id/courtSelectionSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_courts_label"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editTextCourtCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:importantForAutofill="yes"
                android:autofillHints="number"
                android:text="@string/default_court_count"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColorHint="?android:attr/textColorSecondary" />
        </LinearLayout>

        <!-- Player Selection Title -->
        <TextView
            android:id="@+id/textViewSelectPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/select_players_label"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Player List (now inside the container) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPlayers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/list_item_player_selectable" />

    </LinearLayout>

    <!-- Game View: Resting Players TextView -->
    <TextView
        android:id="@+id/textViewRestingPlayers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        tools:text="Resting: Player 1, Player 2" />

    <!-- Game View: Recycler View for Courts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCourts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textViewRestingPlayers"
        app:layout_constraintBottom_toTopOf="@id/gameActionButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/court_item" />

    <!-- Game View: Action Buttons - FINAL FIX -->
    <LinearLayout
        android:id="@+id/gameActionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEndSession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/end_session_button"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/button_red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddLatePlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_late_player_button"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/button_teal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddCourt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_court_button"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/button_purple" />
    </LinearLayout>

    <!-- Setup View: Start Session Button -->
    <Button
        android:id="@+id/buttonStartSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_session_button"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

</androidx.constraintlayout.widget.ConstraintLayout>